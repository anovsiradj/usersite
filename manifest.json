{
  "manifest_version": 3,
  "name": "UserSite",
  "version": "0.0.5",
  "minimum_chrome_version": "144",
  "description": "Minimalist extension to inject custom JS and CSS files into websites",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "userScripts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/helper.js",
        "js/browser.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "UserSite Dashboard",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "dashboard.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": []
}
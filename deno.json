{
	"imports": {
		"addons-linter": "npm:addons-linter@^9.5.0",
		"jquery": "npm:jquery@4",
		"bootstrap": "npm:bootstrap@5",
		"web-ext": "npm:web-ext@^9.2.0",
		"webextension-polyfill": "npm:webextension-polyfill@^0.12.0"
	},
	"nodeModulesDir": "auto",
	"compilerOptions": {
		"types": [
			"npm:@types/jquery",
			"npm:@types/bootstrap"
		]
	},
	"tasks": {
		"vendor.js": "deno bundle --platform browser --output web/vendor.js js/vendor.js",
		"vendor.css": "deno bundle --platform browser --output web/vendor.css css/vendor.css",
		"web-ext": "deno --allow-env --allow-sys --allow-read --allow-write web-ext",
		"web-ext-help": "deno task web-ext --help",
		"web-ext-lint": "deno task web-ext lint --self-hosted --ignore-files web examples"
	},
	"allowScripts": {
		"allow": [
			"npm:spawn-sync@1.0.15"
		]
	}
}